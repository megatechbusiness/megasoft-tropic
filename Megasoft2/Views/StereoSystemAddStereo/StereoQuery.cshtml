                            @section Scripts {

                                @Scripts.Render("~/Scripts/jquery-1.8.2.min.js")
                                @Scripts.Render("~/Scripts/jquery-ui-1.8.24.min.js")
                                @Scripts.Render("~/bundles/jqueryval")
                                @Scripts.Render("~/Content/bootstrap-toggle/js/bootstrap-toggle.min.js")
                                @Scripts.Render("~/Content/DataTable/datatables.js")

                                <script type="text/javascript">
                                    $(".datepicker").datepicker({ format: 'dd/mm/yyyy', autoclose: true, todayBtn: 'linked' });
                                    var myTable = $('#tblDetail').DataTable();


                                    $(document).ready(function () {
                                        $('.duplicate').on("click", function () {

                                            var result = confirm("Warning this will create a requisition. Do you want to continue?");
                                            if (result) {
                                                return true;
                                            }
                                            else {
                                                return false;
                                            }
                                        });


                                        $('#btnSave').on("click", function () {

                                            var result = confirm("Are you sure you want to Save?");
                                            if (result) {
                                                return true;
                                            }
                                            else {
                                                return false;
                                            }
                                        });

                                        $("#frmStereoQuery").submit(function (e) {
                                            showprogressbar();
                                        });

                                    });
                                </script>
