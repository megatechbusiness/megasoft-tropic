@model IEnumerable<Megasoft2.AdmFormValidation>

<div class="bs-example">
    <div class="panel panel-yellow">
        <!-- Default panel contents -->
        <div class="panel-heading" style="max-height: 52px;">
            <div class="row">
                Stock Codes
                <button type="button" class="closeModal3 close" data-dismiss="modal">&times;</button>
                &nbsp;&nbsp;
            </div>
        </div>
        <div class="modal-body">
            <div id="ReqCustomFormSearch">
                <table id="tblReqForm" class="table table-hover table-striped table-condensed table-responsive table-bordered">
                    <thead><tr><th>Item</th><th>Description</th></tr></thead>
                    <tbody id="data">
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr class="_stk" id="@item.FieldName">
                                    <td>
                                        @Html.HiddenFor(model => item.FieldName)
                                        <a href="#">@item.Item</a>
                                    </td>
                                    <td>
                                        @item.Description
                                    </td>

                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <form role="form">
                <div class="form-group">

                </div>
                <button type="button" class="closeModal3 btn btn-danger btn-sm" id="btnReview" data-dismiss="modal">
                    <i class="fa fa-close"> Close</i>
                </button>
            </form>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
<link href="~/Content/DataTable/datatables.css" rel="stylesheet">
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/Content/DataTable/datatables.js")


<script type="text/javascript">

    $("#tblReqForm").DataTable({});
    $(document).ready(function () {
        $('#ReqCustomFormSearch').on("click", "._stk", function () {
            var rCode = $(this).attr('id');
            //alert(rCode);
            if (rCode == "Requ1") {
                $('#Header_RequestedBy1').val($('td', this).eq(0).text().trim());
            }
            if (rCode == "Requ2") {
                $('#Header_RequestedBy2').val($('td', this).eq(0).text().trim());
            }
            if (rCode == "Requ3") {
                $('#Header_RequestedBy3').val($('td', this).eq(0).text().trim());
            }
            if (rCode == "Dep01") {
                $('#Header_PurchDepartment').val($('td', this).eq(0).text().trim());
            }
            if (rCode == "PurCat") {
                $('#Header_PurchaseCategory').val($('td', this).eq(0).text().trim());
            }
            $('.closeModal3').trigger("click");
        });
    });
</script>