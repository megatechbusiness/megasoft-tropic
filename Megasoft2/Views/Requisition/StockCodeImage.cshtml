@model Megasoft2.ViewModel.StockCodeImagesViewModel
@{
    ViewBag.Title = "StockCodeImage";
}


<div class="bs-example">
    <div class="panel panel-green">
        <!-- Default panel contents -->
        <div class="panel-heading" style="max-height: 52px;">
            <div class="row">
                Stock Code @Model.StockCode- @Model.Description
                <button type="button" class="close" data-dismiss="modal" id="btnCloseComponent">&times;</button>
                &nbsp;&nbsp;
            </div>
        </div>



        <div class="panel-body">
            <div class="col-md-12">
                <div class="form-horizontal row">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="">
                                <table class="table table-bordered table-condensed table-responsive">
                                    <tbody>

                                        @if (Model != null)
                                        {
                                            if (Model.StockCode == "")
                                            {
                                                <tr><td>Load Stock Code</td></tr>
                                            }
                                            else
                                            {
                                                foreach (var item in Model.ImageList)
                                                {
                                                    <tr class="panel panel-default bootcards-summary">
                                                        <td class="text-center">
                                                            <img src="@item" width="100" height="100" id="imgData" />
                                                        </td>
                                                    </tr>
                                                }

                                            }
                                        }

                                    </tbody>

                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

