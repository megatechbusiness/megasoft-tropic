@model IEnumerable<Megasoft2.mtLabelPrinter>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Label Printers</h2>

<p>    
    <a href="@Url.Action("Create", "LabelPrinter")" class="btn btn-success">
        <span class="fa fa-plus-square-o" aria-hidden="true" title="Add New Printer"> New Printer</span>
    </a>
    <a href="@Url.Action("Index", "LabelPrinter")" class="btn btn-success">
        <span class="fa fa-refresh" aria-hidden="true" title="Refresh"> Refresh</span>
    </a>
</p>
<table class="table table-hover table-striped table-condensed table-responsive">
    <tr>
        <th>
            Printer Name
        </th>
        <th>
            Printer Path
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PrinterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrinterPath)
            </td>
            <td>
                <a href="@Url.Action("Edit", "LabelPrinter", new { id = item.PrinterName })" class="modal-link btn btn-primary">
                    <span class="fa fa-pencil-square-o" aria-hidden="true" title="Edit Printer"></span>
                </a>
                <a href="@Url.Action("Delete", "LabelPrinter", new { id = item.PrinterName })" class="modal-link btn btn-warning">
                    <span class="fa fa-trash-o" aria-hidden="true" title="Delete Printer"></span>
                </a>
            </td>
           
        </tr>
    }

</table>


