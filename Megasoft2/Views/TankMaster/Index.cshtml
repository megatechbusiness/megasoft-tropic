@model IEnumerable<Megasoft2.mtTankMaster>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tank Setup</h2>

<p>
    <a href="@Url.Action("Create", "TankMaster")" class="modal-link btn btn-success">
        <span class="fa fa-plus-square-o" aria-hidden="true" title="Add New Tank"> New Tank</span>
    </a>
    <a href="@Url.Action("Index", "TankMaster")" class="btn btn-success">
        <span class="fa fa-refresh" aria-hidden="true" title="Refresh"> Refresh</span>
    </a>
</p>
<table class="table table-hover table-striped table-condensed table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tank)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tagname)
        </th>        
        <th>
            @Html.DisplayNameFor(model => model.TankType)
        </th>        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tagname)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.TankType)
            </td>            
            <td>
                <a href="@Url.Action("Edit", "TankMaster", new { tank = item.Tank })" class="modal-link btn btn-primary">
                    <span class="fa fa-pencil-square-o" aria-hidden="true" title="Edit Tank"></span>
                </a>
                <a href="@Url.Action("Delete", "TankMaster", new { tank = item.Tank })" class="modal-link btn btn-danger">
                    <span class="fa fa-trash-o" aria-hidden="true" title="Delete Tank"></span>
                </a>
            </td>
        </tr>
    }

</table>
