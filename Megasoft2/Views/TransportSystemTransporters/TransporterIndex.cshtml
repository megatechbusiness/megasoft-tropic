@model IEnumerable<Megasoft2.mtTransporter>

@{
    ViewBag.Title = "TransporterIndex";
}

<h4 style="font-weight:bold;" class="text-center">Tranporters</h4><hr />

<p>
    <a href="@Url.Action("Create", "TransportSystemTransporters")" class="btn btn-warning">
        <span class="fa fa-file-o" aria-hidden="true" title="Add New User"> Add Transporter</span>
    </a>
    <a href="@Url.Action("TransporterIndex", "TransportSystemTransporters")" class="btn btn-default">
        <span class="fa fa-refresh" aria-hidden="true" title="Refresh"> Refresh</span>
    </a>
</p>
<div class="form-group">
    <div class="col-sm-12">
        <input type="text" id="txtSearch" class="form-control input-sm col-sm-12" placeholder="search" autofocus />

    </div>

    <hr />
    <div class="col-sm-14">
        <table class="tblUser table table-hover table-striped table-condensed table-responsive table-bordered sortable" id="tblTransporter" style="table-layout:fixed;">
            <thead class="style1">
                <tr class="nowrap">
                    
                    <th style="width:200px">
                        Transporter(Supplier)
                    </th>
                    <th style="width:200px">
                        Vehicle Reg
                    </th>
                    
                    <th style="width:200px">
                        Link Reg 1
                    </th>
                    <th style="width:200px">
                        Link Reg 2
                    </th>
                    <th style="width:200px">
                        Link Reg 3
                    </th>
                    <th style="width:200px">
                        Driver
                    </th>
                    <th style="width:200px">
                        GL Code
                    </th>
                    <th style="width:200px">
                        Vehicle Capacity
                    </th>
                    <th style="width:75px"></th>
                </tr>
            <tbody>
             @foreach (var item in Model)
             {

                    <tr class="nr">
                        <td>
                            @Html.DisplayFor(model => item.Transporter)
                            @Html.HiddenFor(model => item.Transporter)
                        </td>
                        <td>
                            <a href="@Url.Action("Create", "TransportSystemTransporters", new { Transporter = item.Transporter, VehicleReg = item.VehicleReg })">@Html.DisplayFor(model => item.VehicleReg)</a>
                        </td>
                        
                        <td>
                            @Html.DisplayFor(model => item.LinkReg1)
                            @Html.HiddenFor(model => item.LinkReg1)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.LinkReg2)
                            @Html.HiddenFor(model => item.LinkReg2)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.LinkReg3)
                            @Html.HiddenFor(model => item.LinkReg3)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Driver)
                            @Html.HiddenFor(model => item.Driver)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.GLCode)
                            @Html.HiddenFor(model => item.GLCode)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.VehicleCapacity)
                            @Html.HiddenFor(model => item.VehicleCapacity)
                        </td>
                        <td>
                            <a href="@Url.Action("Create", "TransportSystemTransporters", new { Transporter = item.Transporter, VehicleReg = item.VehicleReg })" class="btn btn-primary btn-xs">
                                <span class="fa fa-pencil-square-o" aria-hidden="true" title="Edit Transporter"></span>
                            </a>
                            <a href="@Url.Action("Delete", "TransportSystemTransporters", new { Transporter = item.Transporter, VehicleReg = item.VehicleReg })" class="modal-link btn btn-danger btn-xs">
                                <span class="fa fa-trash-o" aria-hidden="true" title="Delete Transporter"></span>
                            </a>
                        </td>
                    </tr>

              }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {

    <style type="text/css">
        .nowrap {
            white-space: nowrap;
        }
    </style>

    @Scripts.Render("~/Scripts/jquery-1.8.2.min.js")
    @Scripts.Render("~/Scripts/jquery-ui-1.8.24.min.js")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Content/UltimateScrolling/Sortable.js")
    @Scripts.Render("~/Content/UltimateScrolling/UltimateScrollingTable.js")



    <script type="text/javascript">



    $(function () {

        $('#txtSearch').focus();
        $('#txtSearch').keyup(function () {
            var val = $.trim($(this).val()).replace(/ +/g, ' ').toLowerCase();
            var $rows = $('#tblTransporter .nr');
            $rows.show().filter(function () {
                var text = $(this).text().replace(/\s+/g, ' ').toLowerCase();
                return !~text.indexOf(val);
            }).hide();
        });

        UltimateScrollingTable('tblTransporter', 700, 1500, 1);
    });
    </script>
}
