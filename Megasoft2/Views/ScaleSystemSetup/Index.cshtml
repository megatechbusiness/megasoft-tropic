@model IEnumerable<Megasoft2.mtScale>

@{
    ViewBag.Title = "Index";
}

<h4 style="font-weight:bold;" class="text-center">Scale Setup</h4><hr />

<p>
    <a href="@Url.Action("Create", "ScaleSystemSetup")" class="btn btn-warning">
        <span class="fa fa-file-o" aria-hidden="true" title="Add New User"> Add Scale</span>
    </a>
    <a href="@Url.Action("Index", "ScaleSystemSetup")" class="btn btn-default">
        <span class="fa fa-refresh" aria-hidden="true" title="Refresh"> Refresh</span>
    </a>
</p>
<div class="form-group">
    <div class="col-sm-12">
        <input type="text" id="txtSearch" class="form-control input-sm col-sm-12" placeholder="search" autofocus />

    </div>

    <hr />
    <div class="col-sm-14">
        <table class="tblScale table table-hover table-striped table-condensed table-responsive table-bordered sortable" id="tblScale" style="table-layout:fixed;">
            <thead class="style1">
                <tr class="nowrap">

                    <th style="width:200px">
                        Scale Model Id
                    </th>
                    <th style="width:200px">
                        FriendlyName
                    </th>

                    <th style="width:200px">
                        Scale Model Name
                    </th>
                    <th style="width:200px">
                        Serial Baud Rate
                    </th>
                    <th style="width:200px">
                        Serial Data Bits
                    </th>
                    <th style="width:200px">
                        Serial Handshake
                    </th>
                    <th style="width:200px">
                        Serial Parity
                    </th>
                    <th style="width:200px">
                        Serial Stop Bits
                    </th>
                    <th style="width:200px">
                        Serial Terminator
                    </th>
                    <th style="width:200px">
                        Scale String Prefix
                    </th>
                    <th style="width:200px">
                        ScaleStartMassOrdinal
                    </th>
                    <th style="width:200px">
                        ScaleMassOrdinalLength
                    </th>
                    <th style="width:200px">
                        ScaleStartMassDecimal
                    </th>
                    <th style="width:200px">
                        ScaleMassDecimalLength
                    </th>
                    <th style="width:200px">
                        ScaleDataLength
                    </th>
                    <th style="width:200px">
                        CurrWeight
                    </th>
                    <th style="width:200px">
                        PrinterName
                    </th>
                    <th style="width:150px"></th>
                </tr>
            <tbody>
                @foreach (var item in Model)
                {

     
                <tr class="nr">
                    <td>
                        <a href="@Url.Action("Create", "ScaleSystemSetup", new { ScaleModelId = item.ScaleModelId})">@Html.DisplayFor(model => item.ScaleModelId)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.FriendlyName)
                        @Html.HiddenFor(model => item.FriendlyName)
                    </td>

                    <td>
                        @Html.DisplayFor(model => item.ScaleModelName)
                        @Html.HiddenFor(model => item.ScaleModelName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.SerialBaudRate)
                        @Html.HiddenFor(model => item.SerialBaudRate)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.SerialDataBits)
                        @Html.HiddenFor(model => item.SerialDataBits)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.SerialHandshake)
                        @Html.HiddenFor(model => item.SerialHandshake)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.SerialParity)
                        @Html.HiddenFor(model => item.SerialParity)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.SerialStopBits)
                        @Html.HiddenFor(model => item.SerialStopBits)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.SerialTerminator)
                        @Html.HiddenFor(model => item.SerialTerminator)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.ScaleStringPrefix)
                        @Html.HiddenFor(model => item.ScaleStringPrefix)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.ScaleStartMassOrdinal)
                        @Html.HiddenFor(model => item.ScaleStartMassOrdinal)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.ScaleMassOrdinalLength)
                        @Html.HiddenFor(model => item.ScaleMassOrdinalLength)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.ScaleStartMassDecimal)
                        @Html.HiddenFor(model => item.ScaleStartMassDecimal)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.ScaleMassDecimalLength)
                        @Html.HiddenFor(model => item.ScaleMassDecimalLength)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.ScaleDataLength)
                        @Html.HiddenFor(model => item.ScaleDataLength)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.CurrWeight)
                        @Html.HiddenFor(model => item.CurrWeight)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.PrinterName)
                        @Html.HiddenFor(model => item.PrinterName)
                    </td>                   
                    <td>
                        <a href="@Url.Action("Create", "ScaleSystemSetup", new { ScaleModelId = item.ScaleModelId })" class="btn btn-primary btn-xs">
                            <span class="fa fa-pencil-square-o" aria-hidden="true" title="Edit Scale Info"></span>
                        </a>
                        <a href="@Url.Action("Create", "ScaleSystemSetup", new { ScaleModelId = "",ToCopy=item.ScaleModelId})" class=" btn btn-success btn-xs">
                            <span class="fa fa-copy" aria-hidden="true" title="Copy Scale Info"></span>
                        </a>
                        <a href="@Url.Action("Delete", "ScaleSystemSetup", new { ScaleModelId = item.ScaleModelId })" class="modal-link btn btn-danger btn-xs">
                            <span class="fa fa-trash-o" aria-hidden="true" title="Delete Scale"></span>
                        </a>
                    </td>
                </tr>

                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {

    <style type="text/css">
        .nowrap {
            white-space: nowrap;
        }
    </style>

    @Scripts.Render("~/Scripts/jquery-1.8.2.min.js")
    @Scripts.Render("~/Scripts/jquery-ui-1.8.24.min.js")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Content/UltimateScrolling/Sortable.js")
    @Scripts.Render("~/Content/UltimateScrolling/UltimateScrollingTable.js")



    <script type="text/javascript">

        $(function () {
            $('#txtSearch').focus();
            $('#txtSearch').keyup(function () {
                var val = $.trim($(this).val()).replace(/ +/g, ' ').toLowerCase();
                var $rows = $('#tblScale .nr');
                $rows.show().filter(function () {
                    var text = $(this).text().replace(/\s+/g, ' ').toLowerCase();
                    return !~text.indexOf(val);
                }).hide();
            });

            UltimateScrollingTable('tblScale', 700, 1500, 1);
        });
    </script>
}