@model Megasoft2.mtSysproAdmin

@{
    ViewBag.Title = "Create";
}
<div class="panel panel-primary modal-body" style="border-color:white;">
    <div class="panel-heading">
        <h4 class="panel-title">
            <a data-toggle="collapse" data-target="#collapseOne"
               href="#collapseOne" class="collapsed">
                Create New Company
            </a>
        </h4>
    </div>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    

    @using (Ajax.BeginForm("Create", new AjaxOptions()
{
    OnSuccess = "ShowErrorDiv",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "errordiv"

}))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="panel-body">
            <fieldset>
                <div class="form-horizontal row">
                    <div class="form-group">
                        <div class="control-label col-sm-3" style="text-align:left;">
                            Company
                        </div>
                        <div class="editor-field input-sm col-sm-9">
                            @Html.TextBoxFor(model => model.Company, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(model => model.Company)
                        </div>
                    </div>
                </div>

                <div class="form-horizontal row">
                    <div class="form-group">
                        <div class="control-label col-sm-3" style="text-align:left;">
                            Database Name
                        </div>
                        <div class="editor-field input-sm col-sm-9">
                            @Html.TextBoxFor(model => model.DatabaseName, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(model => model.DatabaseName)
                        </div>
                    </div>
                </div>

                <div class="form-horizontal row">
                    <div class="form-group">
                        <div class="control-label col-sm-3" style="text-align:left;">
                            Company Password
                        </div>
                        <div class="editor-field input-sm col-sm-9">
                            @Html.TextBoxFor(model => model.CompanyPassword, new { @type = "password", @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(model => model.CompanyPassword)
                        </div>
                    </div>
                </div>     
                
                 

                <div id="errordiv">

                </div>
                <div class="form-horizontal row">

                    <div class="form-group">
                        <div class="col-sm-6">
                            <button type="submit" value="Save" class="btn btn-info">
                                <i class="fa fa-save"></i> Save
                            </button>
                        </div>
                        <div class="col-sm-6" style="text-align:right;">
                            <button type="button" id="close-btn" class="modal-close-btn btn btn-danger">
                                <i class="fa fa-close"></i> Close
                            </button>
                        </div>

                    </div>
                </div>
            </fieldset>
        </div>

    }
</div>

<script type="text/javascript">

    function ShowErrorDiv() {

        $('#errordiv').addClass("alert alert-danger");

    }

