@model Megasoft2.mtSysproAdmin

@{
    ViewBag.Title = "Delete";
}

<div class="panel panel-primary modal-body" style="border-color:white;">
    <div class="panel-heading">
        <h4 class="panel-title">
            <a data-toggle="collapse" data-target="#collapseOne"
               href="#collapseOne" class="collapsed">
                Delete Company
            </a>
        </h4>
    </div>
    <div class="panel-body">
        <h3>Are you sure you want to delete this?</h3>
        <fieldset>

            <div class="form-horizontal row">
                <div class="form-group">
                    <div class="control-label col-sm-3" style="text-align:left;">
                        Company
                    </div>
                    <div class="display-field col-sm-9">
                        @Html.TextBoxFor(model => model.Company, new { @class = "form-control input-sm", @readonly = "readonly" })
                    </div>
                </div>
            </div>

            <div class="form-horizontal row">
                <div class="form-group">
                    <div class="control-label col-sm-3" style="text-align:left;">
                        Database Name
                    </div>
                    <div class="display-field col-sm-9">
                        @Html.TextBoxFor(model => model.DatabaseName, new { @class = "form-control input-sm", @readonly = "readonly" })
                    </div>
                </div>
            </div>
        </fieldset>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal row">

                <div class="form-group">
                    <div class="col-sm-6">
                        <button type="submit" value="Delete" class="btn btn-danger">
                            <i class="fa fa-trash"></i> Delete
                        </button>
                    </div>
                    <div class="col-sm-6" style="text-align:right;">
                        <button type="button" id="close-btn" class="modal-close-btn btn btn-danger">
                            <i class="fa fa-close"></i> Close
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>