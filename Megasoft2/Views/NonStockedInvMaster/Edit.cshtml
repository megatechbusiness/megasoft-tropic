@model Megasoft2.mtNonStockMaster

@using (Html.BeginForm("Edit", "NonStockedInvMaster", FormMethod.Post, new { @id = "Form1" }))
{
    @Html.AntiForgeryToken()
    <h4 style="font-weight:bold;" class="text-center">Non Stocked - Stock Codes</h4><hr />
    if (!Html.ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger fade in">
            @Html.ValidationSummary(true)
        </div>
    }
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#home">Scale Details</a></li>
        <li class="pull-right">
            <button type="button" value="Users" class="btn btn-primary" onclick="@("window.location.href='" + @Url.Action("Index", "NonStockedInvMaster") + "'");">
                <i class="fa fa-arrow-circle-left"></i> Stock Codes
            </button>
            <button type="submit" id="btnSave" value="Save" class="btn btn-info">
                <i class="fa fa-save"></i> Save
            </button>
        </li>
    </ul>

    <div class="tab-content">
        <div id="home" class="tab-pane fade in active">
            <div class="form-group">
                <div class="col-sm-12">
                    <fieldset>
                        <div class="form-horizontal row">
                            <div class="col-sm-6">
                                @if (Model.StockCode != null)
                                {

                                    <div class="form-horizontal row">
                                        <div class="form-group">
                                            <label class="col-sm-4 control-label input-sm-label" style="text-align:left;">StockCode</label>
                                            <div class="col-sm-8">
                                                <div class="col-sm-12">
                                                    @Html.TextBoxFor(model => model.StockCode, new { @class = "form-control input-sm", @readonly = "readonly" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="form-horizontal row">
                                        <div class="form-group">
                                            <label class="col-sm-4 control-label input-sm-label" style="text-align:left;">StockCode</label>
                                            <div class="col-sm-8">
                                                <div class="col-sm-12">
                                                    @Html.TextBoxFor(model => model.StockCode, new { @class = "form-control input-sm" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }

                                <div class="form-horizontal row">
                                    <div class="form-group">
                                        <div class="control-label col-sm-4" style="text-align:left;">
                                            Description
                                        </div>
                                        <div class="editor-field input-sm col-sm-8">
                                            <div class="col-sm-12">
                                                @Html.TextBoxFor(model => model.Description, new { @class = "form-control input-sm" })
                                                @Html.ValidationMessageFor(model => model.Description)
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-horizontal row">
                                    <div class="form-group">
                                        <div class="control-label col-sm-4" style="text-align:left;">
                                            Long Desc.
                                        </div>
                                        <div class="editor-field input-sm col-sm-8">
                                            <div class="col-sm-12">
                                                @Html.TextBoxFor(model => model.LongDesc, new { @class = "form-control input-sm" })
                                                @Html.ValidationMessageFor(model => model.LongDesc)
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-horizontal row">
                                    <div class="form-group">
                                        <div class="control-label col-sm-4" style="text-align:left;">
                                            Stock Uom
                                        </div>
                                        <div class="editor-field input-sm col-sm-8">
                                            <div class="col-sm-12">
                                                @Html.TextBoxFor(model => model.StockUom, new { @class = "form-control input-sm" })
                                                @Html.ValidationMessageFor(model => model.StockUom)
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-horizontal row">
                                    <div class="form-group">
                                        <div class="control-label col-sm-4" style="text-align:left;">
                                            Alternate Uom
                                        </div>
                                        <div class="editor-field input-sm col-sm-8">
                                            <div class="col-sm-12">
                                                @Html.TextBoxFor(model => model.AlternateUom, new { @class = "form-control input-sm" })
                                                @Html.ValidationMessageFor(model => model.AlternateUom)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-horizontal row">
                                    <div class="form-group">
                                        <div class="control-label col-sm-4" style="text-align:left;">
                                            Conv. Factor Alt. Uom
                                        </div>
                                        <div class="editor-field input-sm col-sm-8">
                                            <div class="col-sm-12">
                                                @Html.TextBoxFor(model => model.ConvFactAltUom, new { @class = "form-control input-sm" })
                                                @Html.ValidationMessageFor(model => model.ConvFactAltUom)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-horizontal row">
                                    <div class="form-group">
                                        <div class="control-label col-sm-4" style="text-align:left;">
                                            Alt. Uom Mult/Div
                                        </div>
                                        <div class="editor-field input-sm col-sm-8">
                                            <div class="col-sm-12">
                                                @Html.DropDownListFor(model => model.ConvMulDiv, new SelectList(ViewBag.MultDivList, "Value", "Text"), "", new { @class = "form-control input-sm" })
                                                @Html.ValidationMessageFor(model => model.ConvMulDiv)
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-horizontal row">
                                    <div class="form-group">
                                        <div class="control-label col-sm-4" style="text-align:left;">
                                            Other Uom
                                        </div>
                                        <div class="editor-field input-sm col-sm-8">
                                            <div class="col-sm-12">
                                                @Html.TextBoxFor(model => model.OtherUom, new { @class = "form-control input-sm" })
                                                @Html.ValidationMessageFor(model => model.OtherUom)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-horizontal row">
                                    <div class="form-group">
                                        <div class="control-label col-sm-4" style="text-align:left;">
                                            Conv. Factor Other Uom
                                        </div>
                                        <div class="editor-field input-sm col-sm-8">
                                            <div class="col-sm-12">
                                                @Html.TextBoxFor(model => model.ConvFactOthUom, new { @class = "form-control input-sm" })
                                                @Html.ValidationMessageFor(model => model.ConvFactOthUom)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-horizontal row">
                                    <div class="form-group">
                                        <div class="control-label col-sm-4" style="text-align:left;">
                                            Other Uom Mult/Div
                                        </div>
                                        <div class="editor-field input-sm col-sm-8">
                                            <div class="col-sm-12">
                                                @Html.DropDownListFor(model => model.MulDiv, new SelectList(ViewBag.MultDivList, "Value", "Text"), "", new { @class = "form-control input-sm" })
                                                @Html.ValidationMessageFor(model => model.MulDiv)
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-horizontal row">
                                    <div class="form-group">
                                        <div class="control-label col-sm-4" style="text-align:left;">
                                            Manufacturing Uom
                                        </div>
                                        <div class="editor-field input-sm col-sm-8">
                                            <div class="col-sm-12">
                                                @Html.TextBoxFor(model => model.ManufactureUom, new { @class = "form-control input-sm" })
                                                @Html.ValidationMessageFor(model => model.ManufactureUom)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-horizontal row">
                                    <div class="form-group">
                                        <div class="control-label col-sm-4" style="text-align:left;">
                                            Conv. Factor Manu. Uom
                                        </div>
                                        <div class="editor-field input-sm col-sm-8">
                                            <div class="col-sm-12">
                                                @Html.TextBoxFor(model => model.ConvFactMuM, new { @class = "form-control input-sm" })
                                                @Html.ValidationMessageFor(model => model.ConvFactMuM)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-horizontal row">
                                    <div class="form-group">
                                        <div class="control-label col-sm-4" style="text-align:left;">
                                            Manu. Uom Mult/Div
                                        </div>
                                        <div class="editor-field input-sm col-sm-8">
                                            <div class="col-sm-12">
                                                @Html.DropDownListFor(model => model.ManMulDiv, new SelectList(ViewBag.MultDivList, "Value", "Text"), "", new { @class = "form-control input-sm" })
                                                @Html.ValidationMessageFor(model => model.ManMulDiv)
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-horizontal row">
                                    <div class="form-group">
                                        <div class="control-label col-sm-4" style="text-align:left;">
                                            Mass
                                        </div>
                                        <div class="editor-field input-sm col-sm-8">
                                            <div class="col-sm-12">
                                                @Html.TextBoxFor(model => model.Mass, new { @class = "form-control input-sm" })
                                                @Html.ValidationMessageFor(model => model.Mass)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-horizontal row">
                                    <div class="form-group">
                                        <div class="control-label col-sm-4" style="text-align:left;">
                                            Product Class
                                        </div>
                                        <div class="editor-field input-sm col-sm-8">
                                            <div class="col-sm-12">
                                                @Html.DropDownListFor(model => model.ProductClass, new SelectList(ViewBag.ProductClassList, "Value", "Text"), "", new { @class = "form-control input-sm" })
                                                @Html.ValidationMessageFor(model => model.ProductClass)
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-horizontal row">
                                    <div class="form-group">
                                        <div class="control-label col-sm-4" style="text-align:left;">
                                            Traceable Type
                                        </div>
                                        <div class="editor-field input-sm col-sm-8">
                                            <div class="col-sm-12">
                                                @Html.DropDownListFor(model => model.TraceableType, new SelectList(ViewBag.TraceableTypeList, "Value", "Text"), "", new { @class = "form-control input-sm" })
                                                @Html.ValidationMessageFor(model => model.TraceableType)
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-horizontal row">
                                    <div class="form-group">
                                        <div class="control-label col-sm-4" style="text-align:left;">
                                            Part Category
                                        </div>
                                        <div class="editor-field input-sm col-sm-8">
                                            <div class="col-sm-12">
                                                @Html.DropDownListFor(model => model.PartCategory, new SelectList(ViewBag.PartCategoryList, "Value", "Text"), "", new { @class = "form-control input-sm" })
                                                @Html.ValidationMessageFor(model => model.PartCategory)
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="form-horizontal row">
                                    <div class="form-group">
                                        <div class="control-label col-sm-4" style="text-align:left;">
                                            Warehouse To Use
                                        </div>
                                        <div class="editor-field input-sm col-sm-8">
                                            <div class="col-sm-12">
                                                @Html.DropDownListFor(model => model.WarehouseToUse, new SelectList(ViewBag.WarehouseList, "Value", "Text"), "", new { @class = "form-control input-sm" })
                                                @Html.ValidationMessageFor(model => model.WarehouseToUse)
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
        <div id="errordiv">
        </div>
    </div>

}
<style type="text/css">
</style>
<link href="~/Content/bootstrap-toggle/css/bootstrap-toggle.min.css" rel="stylesheet">
@Scripts.Render("~/Scripts/jquery-1.8.2.min.js")

@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/Content/bootstrap-toggle/js/bootstrap-toggle.min.js")
