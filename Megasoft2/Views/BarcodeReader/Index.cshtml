@{
    ViewBag.Title = "Index";
}



<fieldset>
    <div class="form-group" style="margin-left:-20px;">
        <div class="form-horizontal row spacer-xs">
            <div class="col-xs-8 text-center">
                <h2>Scan Barcode</h2>
            </div>
        </div>
        <div class="form-horizontal row spacer-xs">
            <div class="editor-field col-xs-8">
                <input type="text" class="form-control input-lg" id="txtBarcode" tabindex="0" style="font-size:x-large;" />
            </div>
        </div>
        <div class="form-horizontal row spacer-xs">
            <div class="editor-field col-xs-8 text-center" id="BarcodeLabel">
                
            </div>
        </div>
        <div class="form-horizontal row spacer-xs">
            <div class="col-xs-8 text-center">
                <a href="#" class="btn btn-primary btn-lg" onclick="$('#txtBarcode').val(''); $('#txtBarcode').focus();" tabindex="-1">
                    <span class="fa fa-trash" aria-hidden="true" title="Clear"></span>
                </a>
            </div>
        </div>
    </div>
</fieldset>
@Scripts.Render("~/Scripts/jquery-1.8.2.min.js")
@Scripts.Render("~/Scripts/jquery-ui-1.8.24.min.js")
@Scripts.Render("~/bundles/jqueryval")
<script type="text/javascript">
    $(function () {


        //change page title text
        $('#megasoftTitle').text(' Megasoft - Barcode Scan');
        var span = document.getElementById("megasoftTitle");
        span.style.fontSize = "x-small";


        $('#txtBarcode').focus();

        $('#txtBarcode').on('change', function (e) {
            $('#BarcodeLabel').html($('#txtBarcode').val());
            $('#txtBarcode').val('');
            $('#txtBarcode').focus();
        });
    });
    </script>