@*<script src="~/Scripts/jquery-1.8.2.min.js"></script>*@

<script type="text/javascript">

    $(document).ready(function () {
       
        $('#SaveNewCustomer').on('click', function (e) {

        var myString = JSON.stringify({
            Name: $('#Name').val(),
            Contact: $('#Contact').val(),
            Telephone: $('#Telephone').val(),
            Email: $('#Email').val(),
            ShipToAddr1: $('#ShipToAddr1').val(),
            ShipToAddr2: $('#ShipToAddr2').val(),
            ShipToAddr3: $('#ShipToAddr3').val(),
            ShipToAddr4: $('#ShipToAddr4').val(),
            ShipToAddr5: $('#ShipToAddr5').val()
        });
        var exportdata = myString;

         $.ajax({  
             type: "POST",
             url: "@Url.Action("SaveCustomer","MasterCardMain")",
             data: exportdata,
             contentType: "application/json; charset=utf-8",
             dataType: "json",
             success: function (data) {
                 if (data.indexOf("Error") === -1) {
                     $('#Name').val("");
                     $('#Contact').val("");
                     $('#Telephone').val("");
                     $('#Email').val("");
                     $('#ShipToAddr1').val("");
                     ; $('#ShipToAddr2').val("");
                     $('#ShipToAddr3').val("");
                     $('#ShipToAddr4').val("");
                     $('#ShipToAddr5').val("");
                     alert("Customer Saved Successfully.")  

                     $('#Header_Customer').val(data);
                     window.setTimeout(function () {
                     }, 500);

                     $('#btnClose').click();
                 }
                 else {
                     alert(data);
                 }
               
            }
        });
        });

    });
</script>