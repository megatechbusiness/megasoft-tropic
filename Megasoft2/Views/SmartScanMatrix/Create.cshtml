@model Megasoft2.ViewModel.SmartScanViewModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "SmartScanMatrixForm" }))
{
    @Html.AntiForgeryToken()
    <h4 style="font-weight:bold;" class="text-center">Create Smart Scan Page</h4><hr />
    if (!Html.ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger fade in">
            @Html.ValidationSummary(true)
        </div>
    }
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#home">Smart Scan</a></li>
        <li class="pull-right">
            <button type="button" value="Users" class="btn btn-primary" onclick="@("window.location.href='" + @Url.Action("Index", "SmartScanMatrix") + "'");">
                <i class="fa fa-group"></i> Smart Scan Screens
            </button>
            <button type="submit" value="Print" class="btn btn-success" id="btnLoad" name="action:Print">
                <i class="fa fa-save"></i> Print
            </button>
            <button type="submit" value="Save" class="btn btn-info" id="btnLoad" name="action:Save">
                <i class="fa fa-save"></i> Save
            </button>
        </li>
    </ul>

    <div class="tab-content">
        <div id="home" class="tab-pane fade in active">
            <div class="form-group">
                <div class="col-sm-12">
                    <fieldset>
                        <div class="form-horizontal row">
                            <div class="col-sm-6">

                                <div class="form-horizontal row">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label input-sm-label" style="text-align:left;">Company</label>
                                        <div class="col-sm-6">
                                            <div class="col-sm-10 dropdown-toggle dropdown">
                                                @Html.DropDownListFor(model => model.SmartScan.Company, new SelectList(@ViewBag.Company, "Company", "DatabaseName"), new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.SmartScan.Company)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-horizontal row">
                                    <div class="form-group">
                                        <div class="control-label col-sm-4" style="text-align:left;">
                                            Username
                                        </div>
                                        <div class="editor-field input-sm col-sm-8">
                                            <div class="col-sm-10">
                                                @Html.DropDownListFor(model => model.SmartScan.Username, new SelectList(@ViewBag.Username, "User", "User"), new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.SmartScan.Username)
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-horizontal row">
                                    <div class="form-group">
                                        <div class="control-label col-sm-4" style="text-align:left;">
                                            Trn Type
                                        </div>
                                        <div class="editor-field input-sm col-sm-8">
                                            <div class="col-sm-12">
                                                @Html.DropDownListFor(model => model.SmartScan.TrnType, new SelectList(@ViewBag.TrnType, "TrnType", "TrnTypeDesc"), new { @class = "form-control" })
                                                @Html.HiddenFor(model => model.SmartScan.SmartId)
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-horizontal row">
                                    <div class="form-group">
                                        <div class="control-label col-sm-4" style="text-align:left;">
                                            Source Warehouse
                                        </div>
                                        <div class="editor-field input-sm col-sm-8">
                                            <div class="col-sm-12">
                                                @Html.DropDownListFor(model => model.SmartScan.SourceWarehouse, new SelectList(@ViewBag.Warehouse, "Warehouse", "Description"), new { @id = "ddlSourceWarehouse", @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-horizontal row">
                                    <div class="form-group">
                                        <div class="control-label col-sm-4" style="text-align:left;">
                                            Source Bin
                                        </div>
                                        <div class="editor-field input-sm col-sm-8">
                                            <div class="col-sm-12">
                                                @Html.TextBoxFor(model => model.SmartScan.SourceBin, new { @class="form-control input-sm"})
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-horizontal row">
                                    <div class="form-group">
                                        <div class="control-label col-sm-4" style="text-align:left;">
                                            Destination Warehouse
                                        </div>
                                        <div class="editor-field input-sm col-sm-8">
                                            <div class="col-sm-12">
                                                @Html.DropDownListFor(model => model.SmartScan.DestWarehouse, new SelectList(@ViewBag.Warehouse, "Warehouse", "Description"), new { @id = "ddlDestWarehouse", @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-horizontal row">
                                    <div class="form-group">
                                        <div class="control-label col-sm-4" style="text-align:left;">
                                            Destination Bin
                                        </div>
                                        <div class="editor-field input-sm col-sm-8">
                                            <div class="col-sm-12">
                                                @Html.TextBoxFor(model => model.SmartScan.DestBin, new { @class = "form-control input-sm" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-horizontal row">
                                    <div class="form-group">
                                        <div class="control-label col-sm-4" style="text-align:left;">
                                            Printer
                                        </div>
                                        <div class="editor-field input-sm col-sm-8">
                                            <div class="col-sm-12">
                                                @Html.DropDownListFor(model => model.Printer, new SelectList(ViewBag.Printers, "Value", "Text"), new { @id = "ddlPrinter", @class = "form-control input-sm" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
        <div id="errordiv">
        </div>
    </div>

}
