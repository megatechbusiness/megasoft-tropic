    function GetSourceBins() {
        $('#errordiv').text("");
        $('#errordiv').removeClass("alert alert-danger");

        var e = document.getElementById("ddlSourceWarehouse");
        var Warehouse = e.options[e.selectedIndex].value;

        //alert(Warehouse);

        var myString = JSON.stringify({
            Warehouse: Warehouse
        });
        var exportdata = myString;

        $.ajax({
            type: "POST",
            url: "@Url.Action("GetBin", "SmartScanMatrix")",
            contentType: "application/json; charset=utf-8",
            data: exportdata,
            dataType: "json",
            success: OnSuccess,
            failure: function () {
                alert(response);
            }
        });

        function OnSuccess(response) {
            var ddlSourceBin = $("#ddlSourceBin");

            ddlSourceBin.empty();

            if (response != "") {

                $.each(response, function () {
                    //alert(this['Value'] + ' space ' + this['Text']);
