@model Megasoft2.Models.ChangePassword

@{
    ViewBag.Title = "Change Password";
}


<div class="panel panel-primary modal-body" style="border-color:white;">
    <div class="panel-heading">
        <h4 class="panel-title">
            <a data-toggle="collapse" data-target="#collapseOne"
               href="#collapseOne" class="collapsed">
                Change Password
            </a>
        </h4>
    </div>

    @*<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>*@

    @using (Ajax.BeginForm("ChangePassword", new AjaxOptions()
{
    OnSuccess = "ShowErrorDiv",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "errordiv"

}))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="panel-body">
            <fieldset>
                <div class="form-horizontal row">
                    <div class="form-group">
                        <div class="control-label col-sm-3" style="text-align:left;">
                            Username
                        </div>
                        <div class="editor-label col-sm-9">
                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control input-sm", @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.Username)
                        </div>
                    </div>
                </div>


                <div class="form-horizontal row">
                    <div class="form-group">
                        <div class="control-label col-sm-3" style="text-align:left;">
                            Old Password
                        </div>
                        <div class="editor-field input-sm col-sm-9">
                            @Html.TextBoxFor(model => model.oldPassword, new { @type = "password", @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(model => model.oldPassword)
                        </div>
                    </div>
                </div>                

                <div class="form-horizontal row">
                    <div class="form-group">
                        <div class="control-label col-sm-3" style="text-align:left;">
                            New Password
                        </div>
                        <div class="editor-field input-sm col-sm-9">
                            @Html.TextBoxFor(model => model.newPassword, new { @type = "password", @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(model => model.newPassword)
                        </div>
                    </div>
                </div>
             


                <div id="errordiv">

                </div>
                <div class="form-horizontal row">

                    <div class="form-group">
                        <div class="col-sm-6">
                            <button type="submit" value="Save" class="btn btn-info">
                                <i class="fa fa-save"></i> Save
                            </button>                           
                        </div>
                        <div class="col-sm-6" style="text-align:right;">
                            <button type="button" id="close-btn" class="modal-close-btn btn btn-danger">
                                <i class="fa fa-close"></i> Close
                            </button>
                        </div>

                    </div>
                </div>
            </fieldset>
        </div>
    }



</div>
<script type="text/javascript">

   

    function ShowErrorDiv() {

        $('#errordiv').addClass("alert alert-danger");

    }

    $(function () {



