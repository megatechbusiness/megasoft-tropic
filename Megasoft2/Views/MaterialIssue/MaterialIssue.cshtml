
<div>
    <div>
        <input ID="hdUser" type="hidden" />
    </div>
    <div class="alert alert-danger" id="errordiv" hidden="hidden">
        <label ID="lblError" Text=""></label>
    </div>
    <div id="LotModals">

    </div>
    


    @*<%-- New Allocation Modal--%>*@
    <div class="modal fade in" id="AllocationModal" role="dialog">
        <div class="modal-dialog" style="width: 100%">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>

                    <h4 class="modal-title">Add Material Allocation</h4>
                </div>

                <div class="modal-body">
                    <div class="form-horizontal row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label for="ddlWarehouse" class="col-sm-4 control-label" style="text-align: left;">Warehouse</label>
                                <div class="col-sm-6 selectContainer">
                                    <select id="ddlWarehouse" class="js-example-basic-single" onchange=""></select>
                                    <input ID="ddlWarehouse_hidden" type="hidden" />
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="col-xs-6">
                                <input type="text" id="txtSearchStockCode" class="form-control input-sm" placeholder="Search" autofocus />
                            </div>                        
                            <div class="input-group-btn">
                                <a href="#" class="btn btn-default btn-sm" id="btnSearch">
                                    <span class="fa fa-arrow-right" aria-hidden="true" title="Load Material"></span>
                                </a>
                            </div>
                        </div>
                        </div>
                    <div class="form-horizontal row">
                        <div class="form-group">                                
                            <input type="hidden" id="hdselectedstockcode" />
                        </div>

                        <div class="col-xs-10" id="selectedStockCode">

                        </div>
                        <div class="col-xs-2 text-right">
                            <button type="button" class="btn btn-info btn-sm" onclick="PostMaterialAllocation()">Post</button>
                            <button type="button" class="btn btn-info btn-sm" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                    <div class="form-horizontal row">
                        <div class="col-xs-12">

                            <div class="table-responsive">
                                <table class="table table-hover table" id="tblStock" style="font-size: 8pt;">
                                    <thead>
                                        <tr>
                                            <th>StockCode</th>
                                            <th>Description</th>
                                            <th>Warehouse</th>
                                            <th>QtyOnHand</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>


                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>

    <div>
        <div class="bs-example">
            <div class="panel panel-primary">
                <!-- Default panel contents -->
                <div class="panel-heading" style="max-height: 52px;">
                    <div class="row">
                        &nbsp&nbsp
                        <div class="btn-group btn-breadcrumb">
                            <a href="@Url.Action("Index","Home")" class="btn btn-default"><i class="glyphicon glyphicon-home"></i></a>
                            <a href="@Url.Action("MaterialIssue","MaterialIssue")" class="btn btn-default">Material Issue</a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="col-md-2"></div>
                    <div class="col-md-8">
                        <div class="well well-sm">
                            <fieldset>
                                <div class="alert alert-danger" id="formerror" hidden="hidden">
                                    <span></span>
                                </div>
                                <div class="form-horizontal row">
                                    <div class="col-xs-6 text-left">
                                        <a href="@Url.Action("MaterialIssue","MaterialIssue")" class="btn btn-success btn-sm">
                                            <span class="fa fa-file-o" aria-hidden="true" title="New"> New</span>
                                        </a>
                                    </div>
                                    <div class="col-xs-6 text-right">
                                        <a class="btn btn-success btn-sm" id="btnSave">
                                            <span class="fa fa-save" aria-hidden="true" title="Post"> Post</span>
                                        </a>&nbsp&nbsp
                                        <a href="#" class="btn btn-default btn-sm" onclick="openAllocationModal();">
                                            <span class="fa fa-plus" aria-hidden="true" title="Add Material Allocation"> Add Material</span>
                                        </a>
                                    </div>
                                </div>
                                <br />

                                <div class="form-horizontal row">
                                    <div class="col-xs-6">
                                        <div class="form-group">
                                            <label for="txtJob" class="col-sm-4 control-label" style="text-align: left;">Job</label>
                                            <div class="col-sm-6">
                                                <div class="input-group add-on">
                                                    <input ID="txtJob" class="form-control input-sm" placeholder="Job">
                                                    <div class="input-group-btn">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-2">
                                                <a href="#" class="btn btn-default btn-sm" onclick="LoadGrid();">
                                                    <span class="fa fa-arrow-right" aria-hidden="true" title="Load Material"></span>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-6">
                                        <div class="">
                                            <label for="ddlWorkCentre" class="col-sm-3 control-label" style="text-align: left;">Machine</label>
                                            <div class="col-sm-8">
                                                <select id="ddlWorkCentre" class="js-example-basic-single" style="width:100%" onchange=""></select>
                                                <input ID="ddlWorkCentre_hidden" type="hidden" hidden="hidden" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-horizontal row">
                                    <div class="col-xs-6">
                                        <div class="form-group">
                                            <label for="ddlShift" class="col-sm-4 control-label" style="text-align: left;">Shift</label>
                                            <div class="col-sm-6 selectContainer">
                                                <select id="ddlShift" class="js-example-basic-single" style="width:100%"></select>
                                                <input ID="ddlShift_hidden" type="hidden" hidden="hidden" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-6">
                                        <div class="form-group">
                                            <label for="txtDate" class="col-sm-4 control-label" style="text-align: left;">Date</label>
                                            <div class='input-group date col-sm-5' id='datetimepicker2'>
                                                <input type='text' class="datepicker datepicker-inline form-control input-sm" placeholder="To Date" id="txtDate" />
                                                <span class="input-group-addon input-sm">
                                                    <span class="fa fa-calendar fa-lg"></span>
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="form-horizontal row">
                                    <div class="col-xs-6">
                                        <div class="form-group">
                                            <label for="tbStockCode" class="col-sm-4 control-label" style="text-align: left;">Stock Code</label>
                                            <div class="col-sm-6">
                                                <input ID="tbStockCode" class="form-control input-sm" placeholder="Stock Code" ReadOnly="readonly">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-6">
                                        <div class="form-group">
                                            <label for="tbStockDescription" class="col-sm-3 control-label" style="text-align: left;">Job Description</label>
                                            <div class="col-sm-8">
                                                <input ID="tbStockDescription" class="form-control input-sm" placeholder="Job Description" ReadOnly="readonly">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </div>

                    </div>
                    <div class="col-md-2"></div>
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped table table-bordered" id="gdvDisplay" style="font-size: 8pt;">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>StockCode</th>
                                        <th>Description</th>
                                        <th>Warehouse</th>
                                        <th>QtyOnHand</th>
                                        <th style="text-align: right;">Qty Required</th>
                                        <th style="text-align: right;">Qty Issued</th>
                                        <th style="text-align: right;">Quantity</th>
                                        <th style="text-align: right;">Traceable</th>
                                        <th style="text-align: right;">Lot</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <input type="hidden" id="hfGUID" value="" />
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
