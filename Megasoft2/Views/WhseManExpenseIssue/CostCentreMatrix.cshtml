@model Megasoft2.ViewModel.ExpenseIssue
@{
    ViewBag.Title = "CostCentre";
}
@if (!Html.ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger fade in">
        @Html.ValidationSummary(true)
    </div>
}
<fieldset>
    <div class="bs-example">
        <div class="panel panel-primary">
            <!-- Default panel contents -->
            <div class="panel-heading" style="max-height: 52px;">
                <div class="row">
                    &nbsp&nbsp
                    <div class="btn-group btn-breadcrumb">
                        <a href="@Url.Action("Home", "Home")" class="btn btn-default"><i class="glyphicon glyphicon-home"></i></a>
                        <a href="@Url.Action("Matrix", "WhseManExpenseIssue")" class="btn btn-default">Expense Issue Matrix</a>
                        <a href="@Url.Action("CostCentreMatrix", "WhseManExpenseIssue", new { CostCentre = Model.CostCentre })" class="btn btn-default"> @Model.CostCentre</a>

                    </div>

                    <div class="pull-right">

                        <a href="@Url.Action("Create", "WhseManExpenseIssue", new { CostCentre = Model.CostCentre, WorkCentre = "", ProductClass = "" })" class="btn btn-default btn-sm">
                            <span class="fa fa-plus-circle" aria-hidden="true" title="New"> New</span>
                        </a>
                        &nbsp; &nbsp;
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <div class="col-sm-1"></div>
                <div class="col-sm-10">
                    <div class="form-group">

                        <div class="form-horizontal row">
                            <div class="table-responsive">
                                <table class="table table-hover table-condensed table-responsive table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>
                                                Cost Centre
                                            </th>
                                            <th>
                                                WorkCentre
                                            </th>
                                            <th>
                                                Desc
                                            </th>
                                            <th>
                                                Product Class
                                            </th>
                                            <th>
                                                Desc
                                            </th>
                                            <th>
                                                Gl Code
                                            </th>
                                            <th>
                                                Desc
                                            </th>
                                            <th>

                                            </th>
                                        </tr>

                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.MatrixList != null)
                                            {
                                                foreach (var item in Model.MatrixList)
                                                {

                                                    <tr>
                                                        <td>
                                                            <a href="@Url.Action("Create", "WhseManExpenseIssue", new { CostCentre = item.CostCentre, WorkCentre = item.WorkCentre, ProductClass = item.ProductClass })">@item.CostCentre</a>
                                                        </td>
                                                        <td>
                                                            @item.WorkCentre
                                                        </td>

                                                        <td>
                                                            @item.WCDesc
                                                        </td>

                                                        <td>
                                                            @item.ProductClass
                                                        </td>
                                                        <td>
                                                            @item.PCDESC
                                                        </td>
                                                        <td>
                                                            @item.GlCode
                                                        </td>
                                                        <td>
                                                            @item.GlDesc
                                                        </td>
                                                        <td>
                                                            <a href="@Url.Action("Delete", "WhseManExpenseIssue", new { CostCentre = item.CostCentre, WorkCentre = item.WorkCentre, ProductClass = item.ProductClass })" class="btn btn-default btn-xs">
                                                                <span class="fa fa-trash-o" aria-hidden="true" title="Delete"></span>
                                                            </a>
                                                        </td>

                                                    </tr>
                                                }
                                            }


                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-1"></div>
            </div>
        </div>
    </div>
</fieldset>

