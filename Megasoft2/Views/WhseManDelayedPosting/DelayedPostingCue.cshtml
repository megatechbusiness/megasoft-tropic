@model Megasoft2.ViewModel.WhseManDelayedPostingWarehouse
@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "DelayedPosstingCue" }))
{
    @Html.AntiForgeryToken()
    if (!Html.ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger fade in">
            @Html.ValidationSummary(true)
        </div>
    }

    <h4 style="font-weight:bold;" class="text-center">Posting Cue</h4>
    <div class="form-horizontal row spacer">
        <div class="col-md-12 col-xs-12">
            <div class="table-responsive">
                <div class="col-lg-12 ">
                    <a href="@Url.Action("DelayedPostingCue", "WhseManDelayedPosting")" class="btn btn-default pull-right">
                        <span class="fa fa-refresh" aria-hidden="true" title="Refresh"> Refresh</span>
                    </a>
                </div>
                <div style="" class="col-lg-12">
                    <table class="table table-hover table-striped table-condensed table-responsive table-bordered" id="tblLines">
                        <thead>
                            <tr class="nowrap">
                                <th>TrnType</th>
                                <th>From Wh</th>
                                <th>From Bin</th>
                                <th>To Wh</th>
                                <th>To Bin</th>
                                <th>StockCode/Job</th>
                                <th>Lot</th>
                                <th>Qty</th>
                                <th>User</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Cue != null)
                            {
                                for (int i = 0; i < Model.Cue.Count(); i++)
                                {

                                    <tr class="noerror nr nowrap">

                                        <td>
                                            @Html.DisplayFor(model => model.Cue[i].MovementType)
                                            @Html.HiddenFor(model => model.Cue[i].MovementType)
                                            @Html.HiddenFor(model => model.Cue[i].TrnId)

                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Cue[i].FromWarehouse)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Cue[i].FromBin)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Cue[i].ToWarehouse)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Cue[i].ToBin)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Cue[i].StockCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Cue[i].Lot)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Cue[i].Quantity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Cue[i].Username)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Cue[i].TrnDate)
                                        </td>
                                    </tr>
                                }

                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <style>
    </style>
    <link href="~/Content/DataTable/datatables.css" rel="stylesheet">
    @*<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.5.6/css/buttons.dataTables.min.css" />*@

    @Scripts.Render("~/Scripts/jquery-2.1.3.min.js")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Content/DataTable/datatables.js")


    @Scripts.Render("~/Content/DataTable/jszip/jszip.min.js")
    @*<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>*@
    @Scripts.Render("~/Content/DataTable/pdfmake/pdfmake.min.js")
    @*<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>*@
    @Scripts.Render("~/Content/DataTable/pdfmake/vfs_fonts.js")
    @*<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>*@
    @Scripts.Render("~/Content/DataTable/buttons/js/dataTables.buttons.min.js")
    @*<script type="text/javascript" src="https://cdn.datatables.net/buttons/1.5.6/js/dataTables.buttons.min.js"></script>*@
    @Scripts.Render("~/Content/DataTable/buttons/js/buttons.flash.min.js")
    @*<script type="text/javascript" src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.flash.min.js"></script>*@
    @Scripts.Render("~/Content/DataTable/buttons/js/buttons.html5.min.js")
    @*<script type="text/javascript" src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.html5.min.js"></script>*@
    @Scripts.Render("~/Content/DataTable/buttons/js/buttons.print.min.js")
    @*<script type="text/javascript" src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.print.min.js"></script>*@

    <script type="text/javascript">
        $('#tblLines').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'pageLength', 'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
        $(document).ready(function () {

        });
    </script>
}
