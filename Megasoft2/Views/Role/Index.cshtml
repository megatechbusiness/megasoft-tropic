@model IEnumerable<Megasoft2.mtRole>

@{
    ViewBag.Title = "Index";
}

<h2>Roles</h2>

<p>
    <a href="@Url.Action("Create", "Role")" class="modal-link btn btn-success">
        <span class="fa fa-plus-square-o" aria-hidden="true" title="Add New Role"> New Role</span>
    </a>
    <a href="@Url.Action("Index", "Role")" class="btn btn-success">
        <span class="fa fa-refresh" aria-hidden="true" title="Refresh"> Refresh</span>
    </a>
</p>
<table class="table table-hover table-striped table-condensed table-responsive">
    <tr>
        <th>
            Role
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Role", new { id = item.Role })" class="modal-link btn btn-primary">
                    <span class="fa fa-pencil-square-o" aria-hidden="true" title="Edit Role"></span>
                </a>
                <a href="@Url.Action("Delete", "Role", new { id = item.Role })" class="modal-link btn btn-danger">
                    <span class="fa fa-trash-o" aria-hidden="true" title="Delete Role"></span>
                </a>
                <a href="@Url.Action("SetAccess", "Role", new { id = item.Role })" class="modal-link btn btn-success">
                    <span class="fa fa-wrench" aria-hidden="true" title="Set Access"></span>
                </a>
            </td>

        </tr>
    }

</table>
