@model Megasoft2.ViewModel.WhseManProductionLabelPrint
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<fieldset>
    <div id="errordiv">

    </div>
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="col-sm-12">
                <div class="form-group">
                    <h4 class="text-center" style="font-weight:bold;">Production Label Print</h4><hr />
                    <div class="form-horizontal row">
                        <div class="form-group">
                            <div class="col-sm-6">
                                <div class="col-md-2 col-xs-12" style="text-align:left;">
                                    Job
                                </div>
                                <div class="editor-field col-md-5 col-xs-8" style="text-align:left;">
                                    @Html.TextBoxFor(model => model.JobDetails.Job, new { @class = "form-control input-sm", @id = "txtJob" })
                                    @Html.ValidationMessageFor(model => model.JobDetails.Job)
                                </div>
                                <div class="col-md-5 col-xs-2" style="text-align:left;">
                                    <button type="button" class="btn btn-success btn-sm" id="btnLoad" onclick="LoadGrid();">
                                        <i class="fa fa-arrow-right"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="col-sm-6">
                            </div>
                        </div>
                    </div>
                    <div class="form-horizontal row">
                        <div class="form-group">
                            <div class="col-sm-6">
                                <div class="control-label col-sm-2" style="text-align:left;">
                                    Printer
                                </div>
                                <div class="editor-field input-sm col-sm-8">
                                    @Html.DropDownListFor(model => model.Printer, new SelectList(ViewBag.Printers, "Value", "Text"), new { @id = "ddlPrinter", @class = "form-control input-sm" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="control-label col-sm-2" style="text-align:left;">
                                    Department
                                </div>
                                <div class="editor-field input-sm col-sm-8">
                                    @Html.DropDownListFor(n => n.Department, new SelectList(ViewBag.DepartmentList, "Value", "Text"), new { @class = "form-control input-sm", style = "width:100%" })
                                </div>
                            </div>
                            <div class=" text-right">

                                <button type="button" id="btnPrint" value="Print" class="btn btn-default btn-sm"><i class="fa fa-print"> Print</i></button>
                            </div>
                        </div>
                    </div>
                    <div class="form-horizontal row">
                        <input type="text" class="form-control input-sm" placeholder="search" id="txtSearch" />
                        <div class="form-group">
                            <table class="table table-hover table-striped table-condensed table-responsive table-bordered" id="tblLines" style="font-size:15px">
                                <thead>
                                    <tr class="nr nowrap">
                                        <th></th>
                                        <th>Job</th>
                                        <th>Batch</th>
                                        <th style="width:100px">Batch Qty</th>
                                        <th>Pallet</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</fieldset>
<style type="text/css">
    .nowrap {
        white-space: nowrap;
    }

    .hr {
        padding: 0px;
        margin: 0px;
    }

    .tdtextbox {
        min-width: 150px;
    }
</style>


<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Content/WhseManProdLabel/WhseManLabelMaintenance.js"></script>
