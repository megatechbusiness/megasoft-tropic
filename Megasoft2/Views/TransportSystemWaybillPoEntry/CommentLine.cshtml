@{
    ViewBag.Title = "CommentLine";
}

<div class="panel panel-primary modal-body">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <div class="panel-heading">
        <h4 class="panel-title">
            <a data-toggle="collapse" data-target="#collapseOne"
               href="#collapseOne" class="collapsed">
                New Comment Line
            </a>
        </h4>
    </div>
    <div class="panel-body">
        <div class="col-sm-12">
            <div class="form-group">
                <div class=" form-horizontal row spacer">
                    <div class="form-group col-sm-12">
                        <div class="form-group col-sm-4">
                            Comment
                        </div>
                        <div class="input-group col-sm-8">
                            <textarea rows="3" class="form-control input-sm" id="Comment" maxlength="300" />
                        </div>
                    </div>
                </div>
                <div class="form-horizontal row spacer">
                    <div class="form-group col-sm-12">
                        <div class="form-group col-sm-4">
                            <a href="#" class="btn btn-default" id="btnSave">
                                <span class="fa fa-save" aria-hidden="true" title="Save"> Save</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">

    $(document).ready(function () {
        $('#btnSave').on("click", function () {
            var trHTML = '';
            trHTML +=
                 '<tr class="nr">'
                + '<td><a href="#" class="delLine btn btn-danger btn-xs"  tabindex="-1"><span class="fa fa-trash-o" aria-hidden="true" title="Delete Line" tabindex="-1"></span></a></td><td></td><td colspan="16">' + $('#Comment').val() + '<input type="hidden" value="C"/></td>'
                + '</tr>'
            $('#tblPo').append(trHTML);

        });
    });
</script>