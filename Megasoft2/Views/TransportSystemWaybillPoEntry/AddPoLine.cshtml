@{
    ViewBag.Title = "AddPoLine";
}

<div class="panel panel-primary modal-body">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <div class="panel-heading">
        <h4 class="panel-title">
            <a data-toggle="collapse" data-target="#collapseOne"
               href="#collapseOne" class="collapsed">
                New P/O Line
            </a>
        </h4>
    </div>
    <div class="panel-body">
        <div class="col-sm-12">
            <div class="form-group">
                <div class=" form-horizontal row spacer">
                    <div class="form-group col-sm-12">
                        <div class="form-group col-sm-4">
                            StockCode
                        </div>
                        <div class="input-group col-sm-8">
                            <input type="text" class="form-control input-sm" id="StockCode" />
                        </div>
                    </div>
                </div>
                <div class="form-horizontal row spacer">
                    <div class="form-group col-sm-12">
                        <div class="form-group col-sm-4">
                            Description
                        </div>
                        <div class="input-group col-sm-8">
                            <input type="text" class="form-control input-sm" id="Description" />
                        </div>
                    </div>
                </div>
                <div class="form-horizontal row spacer">
                    <div class="form-group col-sm-12">
                        <div class="form-group col-sm-4">
                            Quantity
                        </div>
                        <div class="input-group col-sm-8">
                            <input type="text" class="form-control input-sm" id="Quantity" />
                        </div>
                    </div>
                </div>
                <div class="form-horizontal row spacer">
                    <div class="form-group col-sm-12">
                        <div class="form-group col-sm-4">
                            Uom
                        </div>
                        <div class="input-group col-sm-8">
                            <input type="text" class="form-control input-sm" id="Uom" />
                        </div>
                    </div>
                </div>
                <div class="form-horizontal row spacer">
                    <div class="form-group col-sm-12">
                        <div class="form-group col-sm-4">
                            Price
                        </div>
                        <div class="input-group col-sm-8">
                            <input type="text" class="form-control input-sm" id="Price" />
                        </div>
                    </div>
                </div>
                <div class="form-horizontal row spacer">
                    <div class="form-group col-sm-12">
                        <div class="form-group col-sm-4">
                            <a href="#" class="btn btn-default" id="btnSave">
                                <span class="fa fa-save" aria-hidden="true" title="Save"> Save</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        $('#btnSave').on("click", function () {
            var trHTML = '';
            trHTML +=
                 '<tr class="nr">'
                + '<td><a href="#" class="delLine btn btn-danger btn-xs"  tabindex="-1"><span class="fa fa-trash-o" aria-hidden="true" title="Delete Line" tabindex="-1"></span></a></td><td></td><td>' + $('#StockCode').val() + '<input type="hidden" value="S"/></td><td></td><td></td><td>' + $('#Description').val() + '</td><td><input class="Price form-control input-xs" name="PoPrice" value=' + $('#Price').val() + '></td><td><input class="Qty form-control input-xs" name="PoQty" value=' + $('#Quantity').val() + '></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td>'
                + '</tr>'
            $('#tblPo').append(trHTML);

            $('#StockCode').val("");
            $('#Description').val("");
            $('#Price').val("");
            $('#Quantity').val("");
            $('#Uom').val("");


        });
    });
</script>